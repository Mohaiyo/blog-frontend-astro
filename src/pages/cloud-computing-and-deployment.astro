---
import { getCollection } from 'astro:content'
import Layout from '@layouts/Layout.astro'
import { fetchAllPost } from '@utils/index'
import PostList from '@components/PostList.astro'
const { cloudComputingAndDeployment } = await fetchAllPost()
---

<Layout title="云计算与部署">
  <div class="grid gap-10 md:grid-cols-2 lg:gap-10 xl:grid-cols-3">
    {cloudComputingAndDeployment.map((post) => <PostList post={post} />)}
  </div>
</Layout>
